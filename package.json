{
  "name": "xin",
  "description": "spa framework",
  "devDependencies": {
    "grunt": "~0.4.1",
    "shelljs": "~0.2.6",
    "grunt-pax-task": "0.0.3",
    "grunt-contrib-clean": "~0.5.0",
    "grunt-bower-task": "~0.3.2",
    "grunt-contrib-concat": "~0.3.0",
    "grunt-contrib-jshint": "~0.7.0",
    "grunt-contrib-compass": "~0.6.0",
    "grunt-contrib-uglify": "~0.2.5"
  },
  "pax": {
    "prerun": "./pax/prerun",
    "config": {
      "clean": {
        "build": [
          "css",
          "js"
        ],
        "release": [
          "vendor"
        ]
      },
      "build": {
        "flow": [
          "concat",
          "jshint",
          "compass",
          "uglify",
          "clean:release"
        ]
      },
      "concat": {
        "options": {
          "separator": ""
        },
        "lib": {
          "src": [
            "vendor/underscore/underscore.js",
            "vendor/backbone/backbone.js"
          ],
          "dest": "js/libs.js"
        },
        "dist": {
          "src": [
            "src/*"
          ],
          "dest": "js/xin.js"
        }
      },
      "jshint": {
        "dist": [
          "js/xin.js"
        ]
      },
      "uglify": {
        "dist": {
          "files": {
            "js/xin.min.js": [
              "js/xin.js"
            ],
            "js/libs.min.js": [
              "js/libs.js"
            ]
          }
        }
      },
      "compass": {
        "dist": {
          "options": {
            "sassDir": "scss",
            "cssDir": "css",
            "environment": "production"
          }
        }
      }
    }
  }
}
